<!doctype html>
<!-- views/workout_confirmed.ejs - Confirmation page shown after a workout is logged -->
<html>
  <head>
    <title>Workout Logged - <%= shopData.shopName %></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .container {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            text-align: center;
            max-width: 500px;
        }
        .success-icon {
            font-size: 3em;
            margin-bottom: 20px;
        }
        h1 {
            color: #667eea;
            margin-top: 0;
        }
        p {
            color: #333;
            line-height: 1.6;
        }
        strong {
            color: #667eea;
        }
        .actions {
            margin-top: 30px;
        }
        .actions a {
            display: inline-block;
            background: #667eea;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            margin: 5px;
            transition: background-color 0.3s;
        }
        .actions a:hover {
            background: #764ba2;
        }
    </style>
  </head>
  <body>
    <div class="container">
        <div class="success-icon">âœ…</div>
        <h1>Workout Logged!</h1>
        <p><%= message || 'Your workout has been recorded successfully.' %></p>
        <p><strong>Activity:</strong> <%= name %></p>
        
        <div class="actions">
          <a href="/workouts/list">View Workouts</a>
          <a href="/workouts/addworkout">Log Another</a>
          <a href="/">Home</a>
        </div>
    </div>
  </body>
</html>
