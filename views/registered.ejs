<!doctype html>
<!-- views/registered.ejs - Registration success page -->
<html>
  <head>
    <title>Registration Successful - <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="<%= BASE_PATH %>/main.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .container {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            max-width: 500px;
            width: 100%;
            text-align: center;
        }
        .success-icon {
            font-size: 60px;
            margin-bottom: 20px;
        }
        h1 {
            color: #667eea;
            margin-top: 0;
        }
        .message {
            color: #555;
            font-size: 1.1em;
            line-height: 1.6;
            margin: 20px 0;
        }
        .user-info {
            background: #f5f5f5;
            padding: 20px;
            border-radius: 5px;
            margin: 20px 0;
            text-align: left;
        }
        .user-info p {
            margin: 8px 0;
            color: #333;
        }
        .user-info strong {
            color: #667eea;
        }
        .actions {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }
        .btn {
            display: inline-block;
            padding: 12px 30px;
            margin: 0 10px;
            background: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s;
        }
        .btn:hover {
            background: #764ba2;
        }
        .btn-secondary {
            background: #999;
        }
        .btn-secondary:hover {
            background: #777;
        }
    </style>
  </head>
  <body>
    <div class="container">
        <div class="success-icon">âœ…</div>
        <h1>Registration Successful!</h1>
        
        <div class="message">
            <p>Welcome to <%= shopData.shopName %>, <strong><%= firstName %> <%= lastName %></strong>!</p>
            <p>Your account has been created successfully.</p>
        </div>

        <div class="user-info">
            <p><strong>Username:</strong> <%= username %></p>
            <p><strong>Email:</strong> <%= email %></p>
            <p><strong>Status:</strong> Account Active</p>
        </div>

        <p style="color: #777; font-size: 0.9em; margin-top: 20px;">
            ðŸ“§ A confirmation email will be sent to <%= email %>
        </p>

        <div class="actions">
            <a href="<%= BASE_PATH %>/users/login" class="btn">Login Now</a>
            <a href="<%= BASE_PATH %>/" class="btn btn-secondary">Home</a>
        </div>
    </div>
  </body>
</html>
