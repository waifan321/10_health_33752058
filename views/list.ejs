<!doctype html>
<!-- views/list.ejs - Display workouts (reusing list template) -->
<html>
	<head>
		<title><%= pageTitle || 'Workouts' %> - <%= shopData.shopName %></title>
		<link rel="stylesheet"  type="text/css" href="/main.css" />
		<style>
			body {
				font-family: Arial, sans-serif;
				margin: 0;
				padding: 20px;
				background-color: #f5f5f5;
			}
			.container {
				max-width: 900px;
				margin: 0 auto;
				background: white;
				padding: 30px;
				border-radius: 10px;
				box-shadow: 0 2px 5px rgba(0,0,0,0.1);
			}
			h1 {
				color: #667eea;
				text-align: center;
			}
			.actions {
				text-align: center;
				margin: 20px 0;
			}
			.actions a {
				display: inline-block;
				background: #667eea;
				color: white;
				padding: 10px 20px;
				text-decoration: none;
				border-radius: 5px;
				margin: 5px;
				transition: background-color 0.3s;
			}
			.actions a:hover {
				background: #764ba2;
			}
			table {
				border-collapse: collapse;
				width: 100%;
				margin-top: 20px;
			}
			table th, table td {
				border: 1px solid #ddd;
				padding: 12px;
				text-align: left;
			}
			table th {
				background: #667eea;
				color: white;
				font-weight: bold;
			}
			table tr:hover {
				background-color: #f5f5f5;
			}
			.no-data {
				text-align: center;
				padding: 40px;
				color: #999;
			}
			.back-link {
				text-align: center;
				margin-top: 30px;
				padding-top: 20px;
				border-top: 1px solid #eee;
			}
			.back-link a {
				color: #667eea;
				text-decoration: none;
				margin: 0 15px;
			}
			.back-link a:hover {
				text-decoration: underline;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<h1><%= pageTitle || 'üèÉ My Workouts' %></h1>
			
			<div class="actions">
				<a href="/workouts/addworkout">+ Log Workout</a>
				<a href="/workouts/search">üîç Search</a>
				<a href="/workouts/recent">üìÖ Recent</a>
			</div>

			<% if (workouts && workouts.length) { %>
				<table>
					<thead>
						<tr>
							<th>Activity</th>
							<th>Duration (min)</th>
							<th>Calories</th>
							<th>Date</th>
							<th>Notes</th>
						</tr>
					</thead>
					<tbody>
						<% workouts.forEach(function(workout){ %>
							<tr>
								<td><%= workout.activity_type %></td>
								<td><%= workout.duration_minutes %></td>
								<td><%= workout.calories_burned || '-' %></td>
								<td><%= new Date(workout.workout_date).toLocaleDateString() %></td>
								<td><%= workout.notes || '-' %></td>
							</tr>
						<% }) %>
					</tbody>
				</table>
			<% } else { %>
				<div class="no-data">
					<p>No workouts logged yet.</p>
					<a href="/workouts/addworkout">Start logging your workouts ‚Üí</a>
				</div>
			<% } %>

			<div class="back-link">
				<a href="/">Home</a> | <a href="/metrics/history">View Health Metrics</a>
			</div>
		</div>
	</body>
</html>

