<!-- views/about.ejs - About page for Health & Fitness Tracker -->
<html>
  <head>
    <title>About <%=shopData.shopName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        h1 {
            color: #667eea;
            text-align: center;
        }
        h2 {
            color: #764ba2;
            margin-top: 30px;
        }
        p {
            line-height: 1.6;
            color: #333;
        }
        .back-link {
            text-align: center;
            margin-top: 30px;
        }
